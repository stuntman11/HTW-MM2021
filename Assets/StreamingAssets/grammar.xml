			<item>sechs</item>
			<item>sieben</item>
			<item>acht</item>
			<item>neun</item>
		</one-of>
	</rule>
	<rule id="move">
		<one-of>
			<item>hoch</item>
			<item>runter</item>
			<item>links</item>
			<item>rechts</item>
			<item>warten</item>
			<item>anlocken</item>
		</one-of>
	</rule>
</grammar>
